<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".PerfilActivity">

    <TextView
        android:id="@+id/titulo_perfil"
        android:layout_width="269dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:text="perfil"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_nombre_Usuario_perfil"
        android:layout_width="233dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:text="Nombre_usuario"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/icono_perfil"
        app:layout_constraintTop_toBottomOf="@+id/titulo_perfil" />

    <Button
        android:id="@+id/icono_perfil"
        android:layout_width="73dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#00C05F11"
        android:drawableBottom="@drawable/gamasutra"
        android:drawableTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_perfil" />

    <LinearLayout
        android:layout_width="356dp"
        android:layout_height="451dp"
        android:layout_marginTop="28dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_nombre_Usuario_perfil">

        <TextView
            android:id="@+id/Text_nombre_Perfil"
            android:layout_width="245dp"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/white"
            android:text="Nombre"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/Text_apellido_Perfil"
            android:layout_width="245dp"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/white"
            android:text="Apellido"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/Text_numero_perfil"
            android:layout_width="245dp"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/white"
            android:text="Numero"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/Text_Correo_Perfil"
            android:layout_width="245dp"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/white"
            android:text="Correo"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/Text_Puntaje_Perfil"
            android:layout_width="245dp"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/white"
            android:text="Puntaje"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_Editar_Perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#39CA11"
            android:text="Editar Perfil" />

        <Button
            android:id="@+id/btn_Cambiar_Contra_Perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#39CA11"
            android:text="Cambiar ContraseÃ±a" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>